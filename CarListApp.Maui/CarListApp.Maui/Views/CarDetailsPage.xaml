<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarListApp.Maui.Views.CarDetailsPage"
             xmlns:model ="clr-namespace:CarListApp.Maui.Models"
             xmlns:viewmodel ="clr-namespace:CarListApp.Maui.ViewModels"
             x:DataType="viewmodel:CarDetailsViewModel"
             Title="{Binding Car.Model}">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="Large"/>
    </VerticalStackLayout>
</ContentPage>